{
  "name": "bun-webgpu",
  "version": "0.1.2",
  "description": "Native WebGPU implementation for Bun runtime",
  "repository": {
    "type": "git",  
    "url": "https://github.com/kommander/bun-webgpu"
  },
  "homepage": "https://github.com/kommander/bun-webgpu",
  "bugs": {
    "url": "https://github.com/kommander/bun-webgpu/issues"
  },
  "module": "src/index.ts",
  "main": "src/index.ts",
  "type": "module",
  "license": "Apache-2.0",
  "author": "SST",
  "keywords": ["webgpu", "bun", "gpu", "graphics", "compute", "dawn"],
  "scripts": {
    "test": "bun test",
    "build:dev": "cd src/zig && zig build -Doptimize=Debug",
    "build:prod": "cd src/zig && zig build -Doptimize=ReleaseFast",
    "build": "bun run build:native && bun run build:lib",
    "build:lib": "node scripts/build.mjs --lib",
    "build:native": "node scripts/build.mjs --native",
    "build:native:dev": "node scripts/build.mjs --native --dev",
    "publish": "node scripts/publish.mjs",
    "publish:dry-run": "node scripts/publish.mjs --dry-run",
    "build:linux": "./build-linux.sh",
    "build:windows": "pwsh build-windows.ps1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@webgpu/types": "^0.1.60",
    "commander": "^14.0.0",
    "sharp": "^0.34.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
